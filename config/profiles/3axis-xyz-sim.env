# LinuxCNC Machine Profile: 3-Axis XYZ Simulation Mode
# This profile is used by ralph/configure.sh to generate concrete configs

# Profile metadata
PROFILE_NAME="3-Axis XYZ Simulation"
PROFILE_MODE="sim"  # sim | ethercat

# Machine geometry
MACHINE_NAME="linuxcnc-3axis-sim"
COORDINATES="XYZ"
NUM_JOINTS=3
KINEMATICS="trivkins coordinates=XYZ"
LINEAR_UNITS="mm"
ANGULAR_UNITS="degree"

# Drive type: sim | leadshine-el8 | generic-cia402
DRIVE_TYPE="sim"

# Servo thread period (ns)
SERVO_PERIOD=1000000

# Following error tolerances (mm)
FERROR=1.0
MIN_FERROR=0.5

# --- Axis X ---
AXIS_X_MAX_VEL=50.0
AXIS_X_MAX_ACCEL=500.0
AXIS_X_MIN_LIMIT=-300.0
AXIS_X_MAX_LIMIT=300.0
AXIS_X_HOME=0.0
AXIS_X_SCALE=1.0

# --- Axis Y ---
AXIS_Y_MAX_VEL=50.0
AXIS_Y_MAX_ACCEL=500.0
AXIS_Y_MIN_LIMIT=-300.0
AXIS_Y_MAX_LIMIT=300.0
AXIS_Y_HOME=0.0
AXIS_Y_SCALE=1.0

# --- Axis Z ---
AXIS_Z_MAX_VEL=25.0
AXIS_Z_MAX_ACCEL=500.0
AXIS_Z_MIN_LIMIT=-200.0
AXIS_Z_MAX_LIMIT=50.0
AXIS_Z_HOME=0.0
AXIS_Z_SCALE=1.0

# Display
DEFAULT_LINEAR_VELOCITY=5.0
MAX_LINEAR_VELOCITY=50.0
INCREMENTS="5mm 1mm .5mm .1mm .05mm .01mm"

# SSH connection to VM
VM_SSH_PORT=2222
VM_SSH_USER=cnc
VM_SSH_HOST=localhost
VM_LINUXCNC_DIR=/home/cnc/linuxcnc
