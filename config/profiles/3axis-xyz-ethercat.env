# LinuxCNC Machine Profile: 3-Axis XYZ EtherCAT Mode
# This profile targets real EtherCAT hardware (Leadshine EL8 or similar)
# Use after sim mode is verified and hardware is connected

# Profile metadata
PROFILE_NAME="3-Axis XYZ EtherCAT"
PROFILE_MODE="ethercat"  # sim | ethercat

# Machine geometry
MACHINE_NAME="linuxcnc-3axis-ethercat"
COORDINATES="XYZ"
NUM_JOINTS=3
KINEMATICS="trivkins coordinates=XYZ"
LINEAR_UNITS="mm"
ANGULAR_UNITS="degree"

# Drive type: sim | leadshine-el8 | generic-cia402
DRIVE_TYPE="leadshine-el8"

# EtherCAT drive parameters
ETHERCAT_VID="00004321"
ETHERCAT_PID="000010c2"

# Servo thread period (ns) — tighter for real hardware
SERVO_PERIOD=1000000

# Following error tolerances (mm) — tighter for real hardware
FERROR=5.0
MIN_FERROR=1.0

# --- Axis X ---
AXIS_X_MAX_VEL=50.0
AXIS_X_MAX_ACCEL=750.0
AXIS_X_MIN_LIMIT=-300.0
AXIS_X_MAX_LIMIT=300.0
AXIS_X_HOME=0.0
AXIS_X_SCALE=-2000

# --- Axis Y ---
AXIS_Y_MAX_VEL=25.0
AXIS_Y_MAX_ACCEL=750.0
AXIS_Y_MIN_LIMIT=-300.0
AXIS_Y_MAX_LIMIT=300.0
AXIS_Y_HOME=0.0
AXIS_Y_SCALE=2000

# --- Axis Z ---
AXIS_Z_MAX_VEL=25.0
AXIS_Z_MAX_ACCEL=750.0
AXIS_Z_MIN_LIMIT=-200.0
AXIS_Z_MAX_LIMIT=50.0
AXIS_Z_HOME=0.0
AXIS_Z_SCALE=-2000

# Display
DEFAULT_LINEAR_VELOCITY=2.5
MAX_LINEAR_VELOCITY=25.0
INCREMENTS="5mm 1mm .5mm .1mm .05mm .01mm"

# SSH connection to VM
VM_SSH_PORT=2222
VM_SSH_USER=cnc
VM_SSH_HOST=localhost
VM_LINUXCNC_DIR=/home/cnc/linuxcnc
